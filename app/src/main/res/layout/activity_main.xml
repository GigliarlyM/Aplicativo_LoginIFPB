<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_ifpb" />

    <View
        android:id="@+id/conteirnerComponents"
        style="@style/ConteinerComponents"
        android:layout_below="@+id/image_logo" />

    <EditText
        android:id="@+id/edit_users"
        style="@style/Edit_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/conteirnerComponents"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/ic_users"
        android:hint="UsuÃ¡rio"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/edit_password"
        style="@style/Edit_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_users"
        android:layout_centerHorizontal="true"
        android:drawableRight="@drawable/ic_eye"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_entrar"
        style="@style/Button"
        android:layout_below="@+id/edit_password"
        android:text="@string/entrar" />

</RelativeLayout>